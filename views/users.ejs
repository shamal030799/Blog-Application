<style>
    /* Preloader */
    #loading {
        position: fixed;
        width: 100%;
        height: 100vh;
        background: #0388f4;
        z-index: 999999;
    }

    .loader {
        position: relative;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 120px;
        width: 120px;
    }

    .loader span {
        position: absolute;
        top: 0%;
        left: 0%;
        height: 100%;
        width: 100%;
        transform: rotate(calc(18deg * var(--i)));
    }

    .loader span::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 15px;
        height: 15px;
        background: #ffffff;
        border-radius: 50%;
        box-shadow: 1px 1px 1px #000000;
        transform: scale(0);
        animation: animate 2s linear infinite;
        animation-delay: calc(0.1s * var(--i));
    }

    @keyframes animate {
        0% {
            transform: scale(0);
        }

        10% {
            transform: scale(1.2);
        }

        80%,
        100% {
            transform: scale(0);
        }
    }

    /* Preloader */
</style>

